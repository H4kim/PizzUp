{
  "env": {
    "browser": true,
    "es2020": true
  },
  // "extends": ["eslint:recommended", "plugin:react/recommended"],
  "extends": ["react-app", "prettier"],
  "parserOptions": {
    // "ecmaFeatures": {
    //     "jsx": true
    // },
    "ecmaVersion": 11
    // "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "semi": "error",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "trailingComma": "es6",
        "semi": false,
        "jsxSingleQuote": true,
        "singleQuote": true,
        "useTabs": true
      }
    ]
  }
}
